{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./src",
        "rootDirs": [
            "./src"
        ],
        "paths": {
            "src":[
                "./src"
            ]
        },
        "lib": [
            "es2015",
            "es5",
            "es6",
            "es7",
            "es2016"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "node_modules/@types/**/*.d.ts",
        "src/**/*.ts"
    ]
}