{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TS File",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/src/compiler/compiler2.ts",
                "${workspaceRoot}/index.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "TS func Creator File",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/src/compiler/spec.creator.ts",
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "current ts file",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/${relativeFile}",
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "index ts file",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/index.ts",
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "protractor ts file",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/node_modules/protractor/bin/protractor",
                "${workspaceRoot}/protractor.conf.ts",
                "--spec",
                "${workspaceRoot}/spec/index.spec.ts"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "jasmine ts file",
            "type": "node",
            "request": "launch",
            "args": [
                "-r",
                "jasmine-ts",
               "${workspaceRoot}/${relativeFile}"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}